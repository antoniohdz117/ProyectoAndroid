<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Color de fondo -->
    <solid android:color="#CFFEFA" />

    <!-- Borde (stroke) -->
    <stroke
        android:width="3px"
        android:color="#7919FF" />

    <!-- Tamaño del círculo -->
    <size
        android:width="24dp"
        android:height="24dp"/>

    <!-- Padding para que el borde no se corte -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>